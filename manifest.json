{
  "name": "Development Server Switcher",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Quickly jump between development, staging and production servers on the fly",
  "homepage_url": "https://github.com/ProLoser/Chrome-Server-Switcher",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  },
	"page_action": {
		"default_title": "Change Environment",
		"default_icon": "icons/icon48.png",
		"default_popup": "src/popup.html"
	},
  "options_page": "src/options.html",
  "permissions": [
    "tabs",
    "storage"
  ]
}
